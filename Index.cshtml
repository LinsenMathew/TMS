@model IEnumerable<TMSView.Models.DriverDetail>

@{
    ViewBag.Title = "Index";
}

<h2>Driver List</h2>

<p>
    @Html.ActionLink("Create Driver", "Create")
</p>
<table class="table">
    <tr>
        <th>
            Full Name
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Email)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @{
                var fullName = item.FirstName + " " + item.LastName; 
            }
            @Html.DisplayFor(m=>fullName)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Email)
        </td>
        <td>
            @Html.ActionLink("Edit", "Edit", new { id = item.Id }, new { @class = "btn btn-primary", @style = "color:white" }) 
            @Html.ActionLink("View", "Details", new { id = item.Id }, new { @class = "btn btn-primary", @style = "color:white" }) 
            @Html.ActionLink("Delete", "Delete", new { id = item.Id }, new { @class = "btn btn-primary", @style = "color:white" }) 
            
        </td>
    </tr>
}

</table>
